---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Great+Vibes&&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
		<link rel="icon" type="image/png" href="/cornwells-in-boston-website-favicon-black.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="bg-green-500 border-b border-white shadow-sm p-2 flex place-content-between">
			<h1 class="text-2xl md:text-4xl my-auto mx-auto text-white">Cornwells in Boston</h1>
			<img src="/cornwells-in-boston-website-favicon-color.png" class="h-24" />
		</header>
		<slot />
	</body>
</html>
<style is:global>
	:root {

	}
	html {
		font-family: 'Poppins', sans-serif;
		color: #525252;
		background-color: #FAF9F6;
	}
</style>
